programa {
  funcao inicio() {

    // ler um número e dizer se é par ou ímpar
    inteiro num
    
    escreva("Digite um número inteiro positivo: ")
    leia(num)

    // resto da divisão de num por 2 é igual a 1?
    se(num % 2 == 1){
      escreva("Ímpar...\n")
    }
    senao{
      escreva("Par...\n")
    }
  }
}
  }
}
